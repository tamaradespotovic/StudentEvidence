@model StudentEvidence.Models.StudentModel
@{
    ViewBag.Title = "EditStudent";
}

<h2>EditStudent</h2>
<div class="container">
    <div class="card">
        <div class="card-body mx-auto">
            @using (Html.BeginForm("EditStudent", "Student", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.HiddenFor(x => x.ID)

                <div class="form-group row">
                    <label class="col-form-label text-primary"><small>Ime:</small></label>
                    @Html.TextBoxFor(x => x.Ime, new { @class = "form-control", placeholder = "Ime:" })
                </div>
                <div class="form-group row">
                    <label class="col-form-label text-primary"><small>Prezime:</small></label>
                    @Html.TextBoxFor(x => x.Prezime, new { @class = "form-control", placeholder = "Prezime:" })
                </div>
                <div class="form-group row">
                    <label class="col-form-label text-primary"><small>BrojIndexa:</small></label>
                    @Html.TextBoxFor(x => x.BrIndexa, new { @class = "form-control", placeholder = "BrIndexa:", @type = "number" })
                </div>
                <div class="form-group row">
                    <label class="col-form-label text-primary"><small>Grad:</small></label>
                    @Html.TextBoxFor(x => x.Grad, new { @class = "form-control", placeholder = "Grad:" })
                </div>


                <div class="form-group row">
                    <div>

                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

