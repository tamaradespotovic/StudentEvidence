@model StudentEvidence.Models.StudentModel
@{
    ViewBag.Title = "AddStudent";
}

<h2>AddStudent</h2>  

<div class="container">
    <div class="card">
        <div class="card-body mx-auto">
            @using (Html.BeginForm("AddStudent", "Student", FormMethod.Post, new { @class = "form-horizontal" }))
            { 

            <div class="form-group row">
                <label class="col-form-label text-primary"><small>Ime:</small></label>
                @Html.TextBoxFor(x => x.Ime, new { @class = "form-control", placeholder = "Ime:" })
                @Html.ValidationMessageFor(x => x.Ime, null, new { @style = "color:Red;" })
            </div>

            <div class="form-group row">
                <label class="col-form-label text-primary"><small>Prezime:</small></label>
                @Html.TextBoxFor(x => x.Prezime, new { @class = "form-control", placeholder = "Prezime:" })
                @Html.ValidationMessageFor(x => x.Prezime, null, new { @style = "color:Red;" })

            </div>
            <div class="form-group row">
                <label class="col-form-label text-primary"><small>Grad:</small></label>
                @Html.TextBoxFor(x => x.Grad, new { @class = "form-control", placeholder = "Grad:" }) 
                @Html.ValidationMessageFor(x => x.Grad, null, new { @style = "color:Red;" })
            </div>
            <div class="form-group row">
                <label class="col-form-label text-primary"><small>Broj indexa:</small></label>
                @Html.TextBoxFor(x => x.BrIndexa, new { @class = "form-control", placeholder = "Broj indexa:", @type = "number" })
                @Html.ValidationMessageFor(x => x.BrIndexa, null, new { @style = "color:Red;" })

            </div>

                
                 
                 

                <div class="form-group row">
                    <div>

                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>



